      <li>
        <a href="/posts"
        class="flex items-center justify-center gap-2 p-2 rounded-lg   text-neutral-700 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-800">
        <!-- Ikon hanya muncul di mobile -->
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
          class="w-8 h-8 md:hidden  "> <!-- Ukuran ikon lebih kecil di mobile -->
          <path fill="currentColor" d="M6 22q-.825 0-1.412-.587T4 20V4q0-.825.588-1.412T6 2h12q.825 0 1.413.588T20 4v16q0 .825-.587 1.413T18 22zm5-11l2.5-1.5L16 11V4h-5z"/>
        </svg>

        <!-- Tulisan "Blog" hanya muncul di desktop -->
        <span class="hidden md:block text-xl font-semibold tracking-wide text-center">Blog</span>
      </a>
      </li>

