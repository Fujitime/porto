---
import Link from "./shared/Link.astro";
import presentation from "@/data/presentation";
---

<ul role="list" class="flex flex-row gap-3 items-center text-sm font-medium text-neutral-700 dark:text-neutral-300">
  {
    presentation.socials.map((social, index) => (
      <>
        <li class="flex items-center gap-1 hover:text-primary transition-colors duration-200">
          {
            social.label === "Github" && (
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 .5C5.73.5.5 5.73.5 12c0 5.09 3.29 9.4 7.85 10.94.57.11.78-.25.78-.55 0-.27-.01-1.16-.01-2.1-3.19.7-3.87-1.37-3.87-1.37-.52-1.33-1.28-1.68-1.28-1.68-1.05-.72.08-.71.08-.71 1.16.08 1.77 1.19 1.77 1.19 1.03 1.76 2.7 1.25 3.36.96.1-.75.4-1.25.73-1.53-2.55-.29-5.24-1.28-5.24-5.72 0-1.26.45-2.3 1.18-3.11-.12-.29-.51-1.47.11-3.07 0 0 .96-.31 3.15 1.18a10.9 10.9 0 0 1 2.87-.39c.98 0 1.98.13 2.87.39 2.18-1.5 3.14-1.18 3.14-1.18.63 1.6.24 2.78.12 3.07.73.81 1.17 1.85 1.17 3.11 0 4.45-2.7 5.42-5.27 5.7.42.36.8 1.07.8 2.17 0 1.56-.01 2.82-.01 3.2 0 .3.2.66.79.55A10.52 10.52 0 0 0 23.5 12C23.5 5.73 18.27.5 12 .5Z" />
              </svg>
            )
          }

          {
            social.label === "Facebook" && (
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M22.675 0h-21.35C.6 0 0 .6 0 1.342v21.316C0 23.4.6 24 1.325 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.894-4.788 4.659-4.788 1.325 0 2.464.1 2.794.143v3.24l-1.918.001c-1.504 0-1.796.716-1.796 1.765v2.313h3.587l-.467 3.622h-3.12V24h6.116c.725 0 1.325-.6 1.325-1.342V1.342C24 .6 23.4 0 22.675 0z" />
              </svg>
            )
          }

          <Link href={social.link} label={social.label} class="underline-offset-2 hover:underline transition" />
        </li>

        {index < presentation.socials.length - 1 && (
          <li class="text-muted-light dark:text-neutral-500 select-none">/</li>
        )}
      </>
    ))
  }
</ul>
