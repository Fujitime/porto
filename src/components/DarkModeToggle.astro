<button
  id="theme-toggle"
  class="relative flex items-center justify-center p-2 rounded-full bg-neutral-200 dark:bg-neutral-800 transition-all duration-300 hover:scale-110 active:scale-95"
  aria-label="Toggle Dark Mode"
>
  <!-- Moon icon (untuk light mode) -->
  <svg
    id="moon-icon"
    class="w-8 h-8 scale-100 dark:scale-0 transition-transform duration-300"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
  >
    <path
      fill="currentColor"
      d="M10.412 4.158A8 8 0 1 0 18.93 16A9 9 0 0 1 10 7c0-.98.131-1.937.412-2.842M2 12C2 6.477 6.477 2 12 2h1.734l-.868 1.5C12.287 4.5 12 5.689 12 7a7 7 0 0 0 8.348 6.87l1.682-.327l-.543 1.626C20.162 19.137 16.417 22 12 22C6.477 22 2 17.523 2 12"
    />
  </svg>

  <!-- Sun icon (untuk dark mode) -->
  <svg
    id="sun-icon"
    class="absolute w-8 h-8 scale-0 dark:scale-100 transition-transform duration-300"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
  >
    <path
      fill="none"
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="1.5"
      d="M12 18a6 6 0 1 0 0-12a6 6 0 0 0 0 12m10-6h1M12 2V1m0 22v-1m8-2l-1-1m1-15l-1 1M4 20l1-1M4 4l1 1m-4 7h1"
    />
  </svg>
</button>

<script>
  function toggleDarkMode() {
    const htmlClass = document.documentElement.classList;
    const isDark = htmlClass.contains("dark");

    if (isDark) {
      htmlClass.remove("dark");
      localStorage.setItem("theme", "light");
    } else {
      htmlClass.add("dark");
      localStorage.setItem("theme", "dark");
    }
  }

  // Inisialisasi saat page load
  document.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme") || "dark";
    if (savedTheme === "dark" || (!savedTheme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
      document.documentElement.classList.add("dark");
    }
  });

  // Event listener untuk toggle
  document.getElementById("theme-toggle")?.addEventListener("click", toggleDarkMode);
</script>
