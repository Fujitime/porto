---
import Layout from "@/layouts/Layout.astro";

const chatUrl = "https://privatecommuni.chatango.com/";
---

<Layout title="Chatango - Ngobrol Santai">
  <main class="">
      
      <!-- Judul Halaman -->
      <h1 class="text-3xl font-bold text-text-light dark:text-neutral-100">ðŸ’¬ Ngerumpi Santai</h1>
      <p class="text-muted-light dark:text-neutral-400 mt-2">
        Feel free to chat
      </p>

          <!-- Informasi Tambahan -->
          <div class="mt-4 text-sm text-muted-light dark:text-neutral-500">
            Tidak perlu ragu untuk mengirim teks bebas, kok. XD
          </div>

      <!-- Chatango Embed -->
      <div class="relative mt-4">
        <iframe 
          id="chatFrame"
          src={chatUrl} 
          class="w-full h-[700px] border rounded-lg"
          loading="lazy"
        ></iframe>
        
        <!-- Tombol Refresh -->
        <button 
          class="absolute top-2 right-2 bg-neutral-200 dark:bg-neutral-700 p-2 rounded-full transition-all hover:rotate-180"
          onclick="document.getElementById('chatFrame').src = document.getElementById('chatFrame').src"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M12 20q-3.35 0-5.675-2.325T4 12t2.325-5.675T12 4q1.725 0 3.3.712T18 6.75V4h2v7h-7V9h4.2q-.8-1.4-2.187-2.2T12 6Q9.5 6 7.75 7.75T6 12t1.75 4.25T12 18q1.925 0 3.475-1.1T17.65 14h2.1q-.7 2.65-2.85 4.325T12 20"/></svg>
        </button>
      </div>

  
      
    </div>
  </main>
</Layout>
